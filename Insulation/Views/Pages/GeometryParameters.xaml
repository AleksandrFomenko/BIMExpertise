<Page x:Class="Insulation.Views.Pages.GeometryParameters"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://lookupengine.com/xaml"
      mc:Ignorable="d"
      ScrollViewer.CanContentScroll="False">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="pack://application:,,,/Wpf.Ui;component/Resources/Theme/Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Wpf.Ui;component/Resources/Wpf.Ui.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition />
            <RowDefinition Height="30" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Border Grid.Row="1"
                Margin="5"
                CornerRadius="5"
                Background="{DynamicResource ApplicationBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>
                <ui:TextBlock
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Grid.Row="0"
                    Margin="5,0"
                    Text="Выбор изоляции" />
                <ComboBox Grid.Row="1"
                          Margin="5,0,5,5"
                          VerticalAlignment="Center"
                          ItemsSource="{Binding ViewModel.SelectionOptions}"
                          SelectedItem="{Binding ViewModel.SelectionOption, Mode=TwoWay}"
                          DisplayMemberPath="Name" />
            </Grid>
        </Border>

        <Border Grid.Row="2"
                Margin="5"
                CornerRadius="5"
                Background="{DynamicResource ApplicationBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>
                <ui:TextBlock
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Grid.Row="0"
                    Margin="5,0"
                    Text="Толщина изоляции" />
                <ComboBox Grid.Row="1"
                          Margin="5,0,5,5"
                          VerticalAlignment="Center"
                          ItemsSource="{Binding ViewModel.ProjectParameters}"
                          SelectedItem="{Binding ViewModel.ThicknessParameter, Mode=TwoWay}" />
            </Grid>
        </Border>
        <Border Grid.Row="3"
                Margin="5"
                CornerRadius="5"
                Background="{DynamicResource ApplicationBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>
                <ui:TextBlock
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Margin="5,0"
                    Grid.Row="0"
                    Text="Площадь изоляции" />
                <ComboBox Grid.Row="1"
                          Margin="5,0,5,5"
                          VerticalAlignment="Center"
                          ItemsSource="{Binding ViewModel.ProjectParameters}"
                          SelectedItem="{Binding ViewModel.AreaParameter, Mode=TwoWay}" />
            </Grid>
        </Border>
        <Border Grid.Row="4"
                Margin="5"
                CornerRadius="5"
                Background="{DynamicResource ApplicationBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>
                <ui:TextBlock
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Margin="5,0"
                    Grid.Row="0"
                    Text="Объём изоляции" />
                <ComboBox Grid.Row="1"
                          Margin="5,0,5,5"
                          VerticalAlignment="Center"
                          ItemsSource="{Binding ViewModel.ProjectParameters}"
                          SelectedItem="{Binding ViewModel.VolumeParameter, Mode=TwoWay}" />
            </Grid>
        </Border>
        
        <ui:Button Grid.Row="7"
                   HorizontalAlignment="Center"
                   Content="Execute"
                   Appearance="Primary"
                   Command="{Binding ViewModel.ExecuteCommand}"
                   IsEnabled="{Binding ViewModel.ButtonEnable}"
                   Icon="{ui:SymbolIcon BranchCompare24}" />
    </Grid>
</Page>